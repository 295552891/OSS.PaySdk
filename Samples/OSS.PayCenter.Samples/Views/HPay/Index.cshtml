@{
    ViewBag.Title = "公众号支付测试  "; 
}

<div class="container content">
    <div class="page-header">公众号支付页</div>
    <p class="well">
        请在Controller设置配置信息，并在微信手机端访问当前页面 ！
    </p>

    <form class="form-horizontal">
        <div class="form-group">
            <label for="order_name" class="col-sm-2 control-label">订单名称：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="order_name" placeholder="订单名称">
            </div>
        </div>

        <div class="form-group">
            <label for="order_price" class="col-sm-2 control-label">订单金额：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="order_price" placeholder="订单金额">
            </div>
        </div>
   
        <div class="form-group">
            <label class="col-sm-2 control-label">支付方式：</label>
            <div class="col-sm-10">
                <label class="radio-inline">
                    <input type="radio" name="pay_" id="inlineRadio1" checked="checked" value="option1"> 微信支付
                </label>
            
            </div>
        </div>
      
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" class="btn btn-default">支付</button>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <environment names="Development">
        <script src="~/lib/vue/dist/vue.min.js" asp-append-version="true"></script>
        <script src="~/js/pages/hpay.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="@ViewBag.CssStaticPath/lib/vue/dist/vue.min.js"  asp-append-version="true"></script>
        <script src="@ViewBag.CssStaticPath/js/pages/hpay.min.js" asp-append-version="true"></script>
    </environment>
}
